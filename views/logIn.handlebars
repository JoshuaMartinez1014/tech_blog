<form action="/login" method="POST">
  <div class="form-group">
    <label for="username"><strong>UserName:</strong></label><br />
    <input
      type="text"
      class="form-control"
      id="username"
      name="username"
      style="width: 50vw; font-size: 24px;"
      required
    />
  </div>
  <div class="form-group">
    <label for="email"><strong>Email:</strong></label><br />
    <input
      type="email"
      class="form-control"
      id="email"
      name="email"
      style="width: 50vw; font-size: 24px;"
      required
    />
  </div>
  <div class="form-group">
    <label for="password"><strong>Password:</strong></label><br />
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
      style="width: 50vw; font-size: 24px;"
      required
    />
  </div>
  <br />
  <button
    type="submit"
    class="btn btn-primary"
    style="width: 20vw"
  >Login</button>
</form>