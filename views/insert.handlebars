{{! Blog Post cards }}

{{! Dashboard blogposts }}
{{#each userPostFix}}
  <div class="card">
    <div class="card-header">
      <div class="card-title" style="font-size: 1.8rem;">
        <div>{{this.title}}</div>

      </div>
    </div>
    <div class="card-body">

      <div class="card-text"><strong>{{this.description}}</strong></div>
      <br />
      <div class="card-text">
        <a href="/api/blogpost/search/{{this.id}}">

          <em>Post by {{this.user.name}} on {{this.time}}</em></a><br />
      </div>
      <br />
      <a href="api/blogpost/update/{{this.id}}"><button>Update Post</button><a>
      <a href="#"><button>Delete Post</button><a>

    </div>
    <br />
  </div>
{{/each}}

